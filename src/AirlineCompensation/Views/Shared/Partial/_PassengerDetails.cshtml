@model IEnumerable<AirlineCompensation.Models.Passenger>

<table class="table">
    <thead>
        <tr>
            <th>
                <span>PNR</span>
            </th>
            <th>
                <span>First Name</span>
            </th>
            <th>
                <span>Last Name</span>
            </th>
            <th>
                <span>Mobile</span>
            </th>
            <th>
                <span>Email</span>
            </th>
            <th>
                <span>Hotel</span>
            </th>
            <th>
                <span>Meal</span>
            </th>
            <th>
                <span>Status</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pnr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Phone))
                    {
                        <span class="bi bi-phone" style="font-size: 1.5rem;" title="@item.Phone"></span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        <span class="bi bi-envelope" style="font-size: 1.5rem;" title="@item.Email"></span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfferStatus)
                </td>
                <td>
                    <button class="btn btn-light toggle-btn">
                        <i class="bi bi-chevron-down"></i> <!-- Down Arrow -->
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
