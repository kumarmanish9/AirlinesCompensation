@model IEnumerable<AirlineCoreLibrary.Model.Passenger>
@{
    string? fullName;
}

<table id="tblPassenger" class="table table-hover" style="border-collapse: collapse;">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                <span>PNR</span>
            </th>
            <th>
                <span>Pax Name</span>
            </th>
            <th>
                <span>Mobile</span>
            </th>
            <th>
                <span>Email</span>
            </th>
            <th>
                <span>Compensation</span>
            </th>
            <th>
                <span>Status</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            fullName = $"{item.FirstName} {item.LastName}";
            <tr>
                <td class="inactive"><input type="checkbox" class="row-checkbox"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pnr)
                </td>
                <td>
                    @Html.Label(@fullName)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Phone))
                    {
                        <span class="bi bi-phone" style="font-size: 1.5rem;" title="@item.Phone"></span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        <span class="bi bi-envelope" style="font-size: 1.5rem;" title="@item.Email"></span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Compensation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
            <tr class="hidden-content">
                <td colspan="7">
                    <div class="hidden-div">
                        <table class="inactive">
                            <tr>
                                <td>PNR:</td>
                                <td>@item.Pnr</td>
                                <td>Phone:</td>
                                <td>@item.Phone</td>
                                <td>Compensation:</td>
                                <td>@item.Compensation</td>
                            </tr>
                            <tr>
                                <td>Name:</td>
                                <td>@fullName</td>
                                <td>Email:</td>
                                <td>@item.Email</td>
                                <td>Status:</td>
                                <td>@item.Status</td>
                            </tr>
                            <tr>
                                <td>
                                <input type="button"
                                       class="btn btn-outline-primary mb-sm-auto"
                                       value="Send Offer"
                                       onclick="SendOffer()" />
                                </td>
                                <td>
                                <input type="button"
                                       class="btn btn-outline-primary"
                                       value="Resened"
                                       onclick="ResendEmail()" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
